@page
@model GymGenius.Ui.Pages.SignInModel
@{
    ViewData["Title"] = "Sign In";
}


<h2>Sign In</h2>

<form method="post">
    <div>
        <label>Name</label>
        <input asp-for="LoginUser.Email" class="form-control" />
    </div>

    <div>
        <label>Password</label>
        <input asp-for="LoginUser.Password" class="form-control" type="password" />
    </div>


    <button type="submit" class="btn btn-success mt-3">Submit</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <p class="mt-3">@Model.Message</p>
}