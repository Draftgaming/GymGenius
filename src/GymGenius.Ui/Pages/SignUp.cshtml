@page
@model GymGenius.Ui.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign In";
}


<h2>Sign In</h2>

<form method="post">
    <div>
        <label>Name</label>
        <input asp-for="SignUpUser.PeopleName"
               class="form-control" />
    </div>

    <div>
        <label>Phone Number</label>
        <input asp-for="SignUpUser.PeopleNumber" class="form-control" />
    </div>

    <div>
        <label>Weight</label>
        <input asp-for="SignUpUser.PeopleWeight" class="form-control" />
    </div>

    <div>
        <label>Age</label>
        <input asp-for="SignUpUser.PeopleAge" class="form-control" />
    </div>

    <div>
        <label>Email</label>
        <input asp-for="SignUpUser.PeopleEmail" class="form-control" type="email" />
    </div>

    <div>
        <label>Password</label>
        <input asp-for="SignUpUser.PeoplePassword" class="form-control" type="password" />
    </div>

   
    <button type="submit" class="btn btn-success mt-3">Submit</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <p class="mt-3">@Model.Message</p>
}